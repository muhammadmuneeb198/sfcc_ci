<?xml version="1.0" encoding="UTF-8"?>
<metadata xmlns="http://www.demandware.com/xml/impex/metadata/2006-10-31">
    <type-extension type-id="SitePreferences">
        <custom-attribute-definitions>
            <attribute-definition attribute-id="sfraEnableOverlayApplePay">
                <display-name xml:lang="x-default">SFRA - Enable Apple Pay</display-name>
                <description xml:lang="x-default">Enables the Apple Pay plugin in the SFRA Unified Feature Cartridge. Note: The cartridge plugin_applepay must be added to the cartridge path and uploaded to your instance.</description>
                <type>boolean</type>
                <mandatory-flag>false</mandatory-flag>
                <externally-managed-flag>false</externally-managed-flag>
                <default-value>true</default-value>
            </attribute-definition>
